%div{:id => 'products'}
  .third
    %img{:id => 'products', :src => "#{@products.first.image}", :alt => 'MARC Products'}
  .two_third
    %ul{:class => 'breadcrumb'}
      %li
        %a{:href => '/'} MARC
      %li >>
      %li
        %a{:href => '/categories'} Product Categories
      %li >>
      %li
        %a{:href => "/categories/#{params[:category_id]}/products"}= @category.title
    %h2 Products
    %ul{:id => 'products'}
      - @products.each do |product|
        %li
          %a{:href => "/categories/#{params[:category_id]}/products/#{product.id}"}= product.title
  .clear