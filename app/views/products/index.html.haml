%div{:id => 'products'}
  .third
    %img{:class => 'products', :src => "#{@category.nil? ? '/images/missing.png' : @category.image(:medium)}", :alt => 'MARC Products'}
  .two_third
    %ul{:class => 'breadcrumb'}
      %li
        %a{:href => '/'} MARC
      %li >>
      %li
        %a{:href => '/categories'} Product Categories
      %li >>
      %li
        %a{:href => "/categories/#{params[:category_id]}/products"}= @category.title unless @category.nil?
    %h2 Products
    %ul{:class => 'products'}
      - @products.each do |product|
        %li
          %a{:href => "/categories/#{params[:category_id]}/products/#{product.id}", :'data-image-url' => product.image(:medium)}= product.title
  .clear